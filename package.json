{
  "name": "@jornadayu/conversational-form",
  "version": "1.0.3",
  "description": "Turning web forms into conversations",
  "author": "SPACE10 in collaboration with YU",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jornadayu/conversational-form"
  },
  "bugs": {
    "url": "https://github.com/jornadayu/conversational-form"
  },
  "files": [
    "dist"
  ],
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "source": "index.tsx",
  "types": "./dist/index.d.ts",
  "dependencies": {},
  "publishConfig": {
    "provenance": true
  },
  "scripts": {
    "build": "NODE_OPTIONS=--max-old-space-size=8096 vite build && yarn build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --jsx react --esModuleInterop --outDir dist || exit 0",
    "example": "yarn build && cd examples && yarn && yarn start",
    "lint": "eslint \"./src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "yarn lint --fix",
    "dev": "NODE_OPTIONS=--max_http_header_size=220480 vite",
    "start": "yarn dev",
    "prepare": "yarn run husky install",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.16.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@types/react-router": "^5.1.20",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-etc": "^2.0.2",
    "eslint-plugin-i18next": "^6.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "rollup-plugin-visualizer": "^5.9.0",
    "sass": "^1.62.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.3",
    "vitest": "^0.31.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "airbnb"
    ],
    "plugins": [],
    "rules": {
      "no-shadow": "off",
      "@typescript-eslint/no-shadow": "error",
      "@typescript-eslint/no-non-null-assertion": "off",
      "no-use-before-define": "off",
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "import/prefer-default-export": "off",
      "react/jsx-props-no-spreading": "off",
      "react/prop-types": "off",
      "react/jsx-fragments": [
        "error",
        "syntax"
      ],
      "react/jsx-one-expression-per-line": "error",
      "react/jsx-indent": [
        2,
        2,
        {
          "indentLogicalExpressions": true
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/vite.config.ts"
          ]
        }
      ],
      "react/self-closing-comp": [
        "error",
        {
          "component": true,
          "html": true
        }
      ]
    },
    "overrides": [
      {
        "extends": [
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended"
        ],
        "files": [
          "**/*.ts?(x)",
          "**/*.js?(x)"
        ],
        "rules": {
          "react/no-unused-prop-types": "off",
          "@typescript-eslint/no-explicit-any": "off",
          "no-use-before-define": "off",
          "import/no-unresolved": "off",
          "react/jsx-filename-extension": [
            1,
            {
              "extensions": [
                ".tsx"
              ]
            }
          ],
          "react/jsx-indent": [
            2,
            2,
            {
              "indentLogicalExpressions": true
            }
          ],
          "no-underscore-dangle": 0,
          "comma-dangle": [
            1,
            "never"
          ],
          "semi": [
            2,
            "never"
          ],
          "react/react-in-jsx-scope": "off",
          "camelcase": "off"
        }
      },
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    }
  }
}
